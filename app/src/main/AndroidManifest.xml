<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.handsfree"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="14" />

    <application android:label="Hands Free"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.AppCompat">

        <activity
            android:name="com.example.android.handsfree.LaunchTutorial"
            android:label="Hands Free"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">

        </activity>

        <activity
            android:name="com.example.android.handsfree.Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Hands Free"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".MusicIntentReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.HEADSET_PLUG" />
            </intent-filter>
        </receiver>
        <activity
            android:name="com.example.android.handsfree.MainPage"
            android:label="@string/title_activity_main" >
        </activity>


        <receiver android:name=".ServiceReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
    </application>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.ACTION_HEADSET_PLUG"></uses-permission>
</manifest>
